<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-4 col-sm-4">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html=> { style: 'margin: 25px 0' }) do |f| %>
        <h2><%= t(".sign_in", default: "Sign in") %></h2>
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <div class="row form-group">
          <div class="col-xs-6 checkbox">
            <%= f.label :remember_me, class: "boolean optionnal" do %>
              <%= f.check_box :remember_me, as: :boolean, class: "boolean optionnal" if devise_mapping.rememberable? %>
              <%= t('.remember_me') %>
            <% end %>
          </div>
          <div class="col-xs-6 text-right" style="margin-top: 10px">
          <%= link_to t(".forgot_your_password", :default => "Forgot your password?"), new_password_path(resource_name) %>
          </div>
        </div>
        <%= f.button :submit, t(".sign_in", default: "Sign in"), class: "btn btn-primary btn-block" %>
        <hr style="margin: 20px 0; border-color: #CCC;"/>
        <p class="text-center">
          <%= t('.new_account') %>
          <%= link_to t(".sign_up", :default => "Sign up"), new_registration_path(resource_name) %>
        </p>
      <% end %>

    </div>
  </div>
</div>
