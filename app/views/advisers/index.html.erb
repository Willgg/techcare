<div style="background-color: #fff; position: relative; z-index: 1">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-offset-2 col-md-8">
        <div class="coach-card">
          <h1 class="text-center">Select your adviser to get help</h1>
          <div class="row">
            <div class="col-xs-offset-2 col-xs-10">
              <% @advisers.each do |adviser|  %>
                <div class="coach-detail">
                  <div class="picture">
                  <%= image_tag adviser.user.picture.url(:thumb), style: "width: 100%" %>
                  </div>
                  <div class="info">
                    <h2><%= adviser.user.first_name %> <%= adviser.user.last_name %></h2>
                    <p><%= adviser.title %><p>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                    <%= link_to "Select this coach", adviser_selection_path(adviser), method: :post, class: "btn btn-primary" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

