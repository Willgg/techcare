<div style="background-color: #fff; position: relative; z-index: 1">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-offset-2 col-md-8">
        <div class="coach-card">
          <h1 class="text-center"><%= t('.title') %></h1>
          <div class="row">
            <div class="col-xs-offset-1 col-xs-10">
              <% @advisers.each do |adviser|  %>
                <div class="coach-detail">
                  <div class="picture">
                  <%= image_tag adviser.user.picture.url(:medium), style: "width: 100%" %>
                  </div>
                  <div class="info">
                    <h2><%= adviser.user.first_name %> <%= adviser.user.last_name %></h2>
                    <p><%= adviser.title %><p>
                    <p><%= adviser.description %></p>
                    <%= link_to t('.select_coach') + ' ' + adviser.user.first_name,
                        adviser_selection_path(adviser), method: :post, class: "btn btn-primary" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

