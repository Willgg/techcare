<div style="background-color: #fff">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 text-center">
        <div class="coach-card">
          <h1>Select an adviser to get help</h1>
          <div class="row">
            <div class="col-xs-12 col-md-offset-3 col-md-6">
              <% @advisers.each do |adviser|  %>
                <div class="picture" style="background-image:url('<%= adviser.user.picture.url(:medium) %>')">
                </div>
                <div class="info">
                  <h2><%= adviser.user.first_name %> <%= adviser.user.last_name %></h2>
                  <p><%= adviser.title %><p>
                  <%= link_to "Select this coach", adviser_selection_path(adviser), method: :post, class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

