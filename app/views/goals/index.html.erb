<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8">
      <h1 class="text-center">Goals dashboard</h1>
      <!-- <p>Find me in app/views/goals/index.html.erb</p> -->
      <% @goals.each do |goal| %>
        <div class="goal-card text-center">
          <h2><%= goal.title %></h2>

          <p><strong>User measure at goal creation date:</strong>
            <%= goal.last_measure_for_user(@user) { |m| m.where("date < ?", goal.start_date) } %>
          </p>
          <p><strong>last user measure:</strong>
            <%= goal.last_measure_for_user(@user) %></p>

          <p><strong>end_value:</strong>
            <%= goal.end_value %>
          </p>

          <p><strong>Due date:</strong>
            <%= goal.end_date.day %>/<%= goal.end_date.month %>/<%= goal.end_date.year %>
          </p>
          <div class="fullbar">
            <div class="fillbar" style="width: <%= goal.progression_for_user(@user) %>%"></div>
          </div>
          <% if current_user.coach == @user.adviser %>
            <%= link_to "delete", user_goal_path(@user.id, goal), method: :delete, class: "btn btn-danger" %>
          <% end %>
        </div>
      <% end %>

      <% if current_user.coach == @user.adviser %>
        <div class="goal-card">
          <%= link_to "+ Add a new goal", new_user_goal_path, class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>

    <div class="col-xs-12 col-md-4">
      <h2>Chat Area</h2>
   <ul>
      <% @messages.each do |message| %>
        <li>
          <%=message.content%>
          <%=message.created_at%>
        </li>
      <%end%>
  </ul>


      <%= simple_form_for [@user, @message] do |f| %>
        <%= f.error_notification %>
        <%= f.input :content %>
        <%= f.button :submit  %>
      <% end %>
    </div>
  </div>
</div>
