  <div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8">

      <!-- Add Food Picture -->
      <div class="white-card text-center" id="food-pictures">
        <h2><%= t('.food_title') %></h2>
        <div class="food_picture-container">
          <a id="prev_pic"><button>&lt;</button></a>
          <% if @food_pictures.empty? %>
            <div class="food-picture-list">
              <p><%= t('.food_empty') %></p>
            </div>
          <% else %>

            <div class="food-picture-list">
              <% @food_pictures.each do |fp| %>
                <%= render 'food_pictures/show_small', user: @user, fp: fp %>
              <% end %>
            </div>
          <% end %>
          <a id="next_pic"><button>&gt;</button></a>
        </div>
        <% if policy(@measure).new? %>
          <%= render 'food_pictures/form', user: @user, food_picture: @food_picture %>
        <% end %>
      </div>

      <!-- Disclaimer about connected device synchronization -->
      <% unless @user != current_user || @user.authorizations.exists? ||
                @user.api_user_id.present? || cookies[:data_card_read] == "true" %>

        <%= render 'add_data_card' %>
      <% end %>

      <!-- Goals running listing -->
      <% @goals.running.each do |goal| %>

        <% unless goal.is_achieved? %>
          <div class="goal-card text-center">
            <h2>
              <%= t(goal.title, value: goal.goal_value,
                    unit: t('activerecord.attributes.measure_type.unit._'+ goal.unit)) %>
            </h2>
            <p>
              <strong>
                <%= (goal.end_date.to_date - Time.current.to_date).to_i %>
              </strong>
              <%= t('.days') %>
            </p>
            <div class="fullbar">
              <div class="fillbar" style="width: <%= goal.progression %>%">
                <div class="current-measure">
                  <strong>
                  <% if goal.cumulative %>
                    <%= goal.sum_of_measures %>
                  <% else %>
                    <%= goal.last_measure_for_user.round(1) %>
                  <% end %>
                  </strong><br />
                  <%= t('activerecord.attributes.measure_type.unit._' +
                         goal.measure_type.unit) %>
                </div>
              </div>
            </div>
            <% if GoalPolicy.new(current_user, @user, goal).destroy? %>
              <%= link_to(user_goal_path(@user, goal), method: :delete, class: "delete", title: t('.delete')) do %>
                <i class="fa fa-times"></i>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="goal-card text-center complete">
            <h2>
              <%= t(goal.title, value: goal.goal_value,
                    unit: t('activerecord.attributes.measure_type.unit._'+ goal.unit)) %>
            </h2>
            <p>
              <strong>achieved on the <%= goal.end_date.strftime('%d/%m/%Y') %></strong>
            </p>
            <div class="fullbar">
              <div class="fillbar" style="width: <%= goal.progression %>%">
                <div class="current-measure">
                  <strong>
                    <%= goal.current_value %>
                  </strong><br />
                  <%= t('activerecord.attributes.measure_type.unit._' +
                         goal.measure_type.unit) %>
                </div>
              </div>
            </div>

            <% if GoalPolicy.new(current_user, @user, goal).destroy? %>
              <%= link_to(user_goal_path(@user, goal), method: :delete, class: "delete", title: t('.delete')) do %>
                <i class="fa fa-times"></i>
              <% end %>
            <% end %>
          </div>
        <% end %>

      <% end %>

      <!-- Goal Over Listing-->
      <% if @goals.over.count > 0 %>
        <h3>Objectifs pass√©s</h3>
      <% end %>
      <% @goals.over.each do |goal| %>
        <% unless goal.is_achieved? %>
          <div class="goal-card text-center">
            <h2>
              <%= t(goal.title, value: goal.goal_value,
                    unit: t('activerecord.attributes.measure_type.unit._'+ goal.unit)) %>
            </h2>
            <p>
              <strong>
                <%= (goal.end_date.to_date - Time.current.to_date).to_i %>
              </strong>
              <%= t('.days') %>
            </p>
            <div class="fullbar">
              <div class="fillbar" style="width: <%= goal.progression %>%">
                <div class="current-measure">
                  <strong>
                  <% if goal.cumulative %>
                    <%= goal.sum_of_measures %>
                  <% else %>
                    <%= goal.last_measure_for_user.round(1) %>
                  <% end %>
                  </strong><br />
                  <%= t('activerecord.attributes.measure_type.unit._' +
                         goal.measure_type.unit) %>
                </div>
              </div>
            </div>
            <% if GoalPolicy.new(current_user, @user, goal).destroy? %>
              <%= link_to(user_goal_path(@user, goal), method: :delete, class: "delete", title: t('.delete')) do %>
                <i class="fa fa-times"></i>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="goal-card text-center complete">
            <h2>
              <%= t(goal.title, value: goal.goal_value,
                    unit: t('activerecord.attributes.measure_type.unit._'+ goal.unit)) %>
            </h2>
            <p>
              <strong>achieved on the <%= goal.end_date.strftime('%d/%m/%Y') %></strong>
            </p>
            <div class="fullbar">
              <div class="fillbar" style="width: <%= goal.progression %>%">
                <div class="current-measure">
                  <strong>
                    <%= goal.current_value %>
                  </strong><br />
                  <%= t('activerecord.attributes.measure_type.unit._' +
                         goal.measure_type.unit) %>
                </div>
              </div>
            </div>

            <% if GoalPolicy.new(current_user, @user, goal).destroy? %>
              <%= link_to(user_goal_path(@user, goal), method: :delete, class: "delete", title: t('.delete')) do %>
                <i class="fa fa-times"></i>
              <% end %>
            <% end %>
          </div>
        <% end %>
      <% end %>

      <!-- New goal Button -->
      <% if GoalPolicy.new(current_user, @user, Goal).create? %>
        <div class="text-center">
          <%= link_to t('.new-goal'), '#', class: "btn btn-primary ", data: { toggle: "modal", target: "#myModal" } %>
        </div>
      <% end %>

    </div>

    <div class="col-xs-12 col-md-4 chat-column">
      <div class="chat-card">

        <!-- Coach information -->
        <% if current_user == @user.adviser.user %>
          <div class="user-info">
            <%= image_tag @user.picture.url(:medium) %>
            <span class="user-info-name">
              <strong>
                <%= @user.full_name %>
              </strong><br />
            </span>
          </div>
        <% else %>
          <div class="coach-info">
            <%= image_tag @user.adviser.user.picture.url(:medium) %>
            <span class="coach-info-name">
              <strong><%= @user.adviser.user.first_name %> <%= @user.adviser.user.last_name %></strong><br />
              <%= @user.adviser.title %>
            </span>
          </div>
        <% end %>

        <!-- formulaire du chat -->
        <%= simple_form_for [@user, @message], remote: true, html: { class: "text-right"} do |f| %>
          <%= f.error_notification %>
          <%= f.input :content, label: false, placeholder: t('.placeholder-message'), as: :text %>
          <%= f.button :submit, t('.submit-message'), class: "btn btn-primary"  %>
        <% end %>

        <!-- Affichage des messages -->
        <div class="messages">
          <% @messages.each do |message| %>
            <%= render 'messages/message', message: message %>
          <%end%>
        </div>

      </div>
    </div>
  </div>
</div>

